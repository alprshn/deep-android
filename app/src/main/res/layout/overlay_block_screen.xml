<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/overlay_background"
    android:clickable="true"
    android:focusable="true">

    <!-- Ana iÃ§erik kartÄ± -->
    <androidx.cardview.widget.CardView
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="32dp"
        android:backgroundTint="@color/card_background"
        android:elevation="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Ãœst kÄ±sÄ±m: Ä°kon ve baÅŸlÄ±k -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Block Ä°konu -->
                <ImageView
                    android:id="@+id/block_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/circle_red_background"
                    android:padding="20dp"
                    android:src="@drawable/ic_block"
                    android:tint="@color/white" />

                <!-- BaÅŸlÄ±k -->
                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="App Blocked"
                    android:textColor="@color/text_primary"
                    android:textSize="28sp" />

                <!-- Uygulama ismi -->
                <TextView
                    android:id="@+id/app_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="Instagram"
                    android:textColor="@color/accent_red"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- AÃ§Ä±klama mesajÄ± -->
            <TextView
                android:id="@+id/message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="This app is blocked during your focus session.\nStay focused on your goals! ðŸŽ¯"
                android:textColor="@color/text_secondary"
                android:textSize="16sp" />

            <!-- Butonlar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Ana buton: Return to Focus -->
                <Button
                    android:id="@+id/return_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/button_primary"
                    android:text="Return to Focus"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <!-- Ä°kincil buton: Go to Home -->
                <Button
                    android:id="@+id/home_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/button_secondary"
                    android:text="Go to Home"
                    android:textAllCaps="false"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Alt kÄ±sÄ±m: Ekstra bilgi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_timer"
            app:tint="@color/text_tertiary" />

        <TextView
            android:id="@+id/focus_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Focus session active"
            android:textColor="@color/text_tertiary"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>